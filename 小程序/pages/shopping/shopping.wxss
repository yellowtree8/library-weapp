/* pages/shopping/shopping.wxss */
.shop-container{
  /* box-sizing: border-box; */
  padding: 25rpx;

}
.card{
  width: 700rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: rgb(236, 141, 157);
  display: flex;
  justify-content: space-between;
}
.left{
  width: 400rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 25rpx;
  color: white;
}
.right{
  width: 300rpx;
  height: 200rpx;
  position: relative;

}
.right-btn{
  position: absolute;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: white;
  border-radius: 40rpx;
  right: -40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: rgb(236, 141, 157);
}
.nav{
  /* background-color: red; */
  padding: 0rpx 30rpx;
  font-size: 28rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
}

