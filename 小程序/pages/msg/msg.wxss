.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: rgb(236, 233, 233);
}

.scroll-view {
  flex: 1;
  padding: 20rpx;
  max-height: 1050rpx;
}

.chat-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.time{
  display: flex;
  justify-content: center;
  font-size: 18rpx;
  color: gray;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}
.left-word{
  width: 750rpx;
}
.left-word .avatar {
  float: left;
  margin-left: 40rpx;
}
.left-word .message{
  float: left;
  background-color: #fe9697;
  padding: 20rpx 30rpx;
  max-width: 500rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #fff;
  margin-left: 26rpx;
  position: relative;
  line-height: 48rpx;
}
.left-word .message::before{
  content: '';
  position: absolute;
  left: -16rpx;
  top: 6rpx;
  width: 26rpx;
  height: 24rpx;
  background: url('http://1.12.66.234/corner01.png') no-repeat;
}
.right-word{
  width: 750rpx;
}
.right-word .avatar {
  float: right;
  margin-right: 40rpx;
}
.right-word .message{
  float: right;
  background-color: #fff;
  padding: 20rpx 30rpx;
  max-width: 500rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #000;
  margin-right: 26rpx;
  position: relative;
  line-height: 48rpx;
}
.right-word .message::before{
  content: '';
  position: absolute;
  right: -16rpx;
  top: 6rpx;
  width: 26rpx;
  height: 24rpx;
  background: url('http://1.12.66.234/corner02.png') no-repeat;
}
.nickname {
  font-size: 28rpx;
  color: #333;
}


.input-box {
  width: 750rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0px -4rpx 4rpx rgba(0, 0, 0, 0.1);
}

input {
  flex: 1;
  height: 64rpx;
  border: none;
  border-radius: 32rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
}

button {
  width: 160rpx;
  height: 64rpx;
  border: none;
  border-radius: 32rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
}
