
  @keyframes anim {
    0%{
      transform: scale(1);
    }
    5%{
      transform: scale(1);
    }
    50%{
      transform: scale(1.5);
    }
    95%{
      transform: scale(1);
    }
    100%{
      transform: scale(1);
    }
  }
.login-page{
  width: 750rpx;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.login-page::after{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
 
  background-image: url("http://1.12.66.234/%E6%9A%A8%E5%8D%97%E5%A4%A7%E5%AD%A6.jpg");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  animation: anim 50s linear infinite;
}
.login-container{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 600rpx;
  height: 600rpx;
  border: 1rpx solid rgb(120, 118, 120);
  background-color: rgba(87, 81, 81,.3);
  backdrop-filter:blur(10rpx);
  transition: all 1s;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 50rpx 0;
  box-sizing: border-box;
  z-index: 999;
}

.login-container input{

  height: 80rpx;
  width: 420rpx;
  color: white;
  padding-left: 20rpx;
  padding-right: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid rgb(175, 175, 175);
  background-color: rgba(172, 165, 165, 0.3);
  border-radius: 10rpx;
  transition: all 1s;
}
.login-btn{
  width: 250rpx;
  height: 80rpx;
  background-color: rgba(125, 85, 80,.5);
  line-height: 72rpx;
  color: rgb(219, 215, 215);
  border: rgb(211, 116, 75) solid 1px;
}
.password{
  position: relative;
}
.password .van-icon{
  position: absolute;
  right: 40rpx;
  top: 70rpx;
  color: white;
  z-index: 999;
}